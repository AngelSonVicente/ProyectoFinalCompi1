<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity" >

    <ActionMenuView


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        tools:ignore="MissingConstraints" />




    <androidx.appcompat.widget.AppCompatEditText

        android:id="@+id/contenidoUsuario"
        android:layout_width="390dp"
        android:layout_height="580dp"
        android:background="@color/design_default_color_on_secondary"





        app:layout_constraintBottom_toTopOf="@+id/analizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/analizar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"


         android:text="Analizar"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"




        />


    <com.github.mikephil.charting.charts.BarChart
       android:id="@+id/grafiquita"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonOpenFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open File"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />


    <Button
        android:id="@+id/buttonVerG"
        android:layout_width="112dp"
        android:layout_height="51dp"
        android:text="ExportarPNG
"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonExportarW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="176dp"
        android:text="VerEnLaWeb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>